{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Absolute Imports */
    "paths": {
      "@/*": ["./src/*"],
      "@/assets/": ["./src/assets/*"],
      "@/helpers": ["./src/helpers"],
      "@/hooks": ["./src/hooks"],
      "@/components/": ["./src/components/*"]
    }
  },
  "include": [
    "src"
  ]
}
